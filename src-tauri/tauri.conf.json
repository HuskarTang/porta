{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Porta",
  "version": "0.1.0",
  "identifier": "com.porta.desktop",
  "build": {
    "beforeDevCommand": "cd frontend && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd frontend && npm run build",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Porta",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "public.app-category.utilities",
    "shortDescription": "P2P Network Application",
    "longDescription": "Porta is a peer-to-peer network application built on LibP2P that enables secure tunnels for remote service access and proxying.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "wix": null,
      "nsis": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
